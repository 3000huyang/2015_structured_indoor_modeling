cmake_minimum_required(VERSION 2.8)
project(Object_hole_filling)

link_directories("/usr/lib/x86_64-linux-gnu")
find_package (OpenCV REQUIRED)
find_package (gflags REQUIRED)
include_directories("/usr/include" "/usr/local/include")

add_executable(Object_hole_filling object_hole_filling_cali.cpp SLIC.cpp object_hole_filling.cpp)

target_link_libraries(Object_hole_filling opencv_core opencv_highgui pthread gflags)